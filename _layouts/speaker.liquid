---
layout: default
---
<link rel="stylesheet" href="{{ '/assets/css/styles.css' | relative_url }}"> 

<div class="speaker-page">
  <h1>{{ page.title }}</h1>
  <h2>{{ page.position }}</h2>

  <img src="{{ page.image_path }}" alt="{{ page.title }}" class="speaker-image">

  {% if page.bio %}
    <div class="speaker-details">
      <p>{{ page.bio }}</p>
    </div>
  {% endif %}

  <!-- Speaker content will be inserted here -->
  {{ content }}

  <!-- Include additional speaker content -->
  {% if page.speakers %}
    {% for speaker in page.speakers %}
      {% include_markdown speaker.content %}
    {% endfor %}
  {% endif %}
</div>
