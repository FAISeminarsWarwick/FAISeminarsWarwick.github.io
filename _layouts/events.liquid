---
layout: default
---

<article class="event">
  <header class="event-header">
    <h1>{{ page.title }}</h1>
    <p>{{ page.date | date_to_long_string }}</p>
    <p>{{ page.location }}</p>
    <p>Speaker: {{ page.speaker }}</p>
  </header>

  <section class="event-content">
    {{ content }}
  </section>
</article>
