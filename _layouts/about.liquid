  -->
  </section>
 


  <div class="post">
  <article>
    {% if page.speakers %}
      {% for speaker in page.speakers %}
        <hr>
      
        <div class="clearfix">
          {% if speaker.content %}
            {% capture speaker_content %}{% include_relative {{ speaker.content }} %}{% endcapture %}
            {{ speaker_content | markdownify }}
          {% else %}
            {{ content }}
          {% endif %}
        </div>
      {% endfor %}
    {% endif %}
  </article>
</div>

</div>





