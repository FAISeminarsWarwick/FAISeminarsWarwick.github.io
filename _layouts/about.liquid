---
layout: default
---
<div class="post">
  {% assign banner_image_path = 'assets/img/LogoAISem.jpg' %}
  <div class="banner">
    <img src="{{ banner_image_path }}" alt="Banner" class="img-fluid">
  </div>

  <header class="post-header">
    <h1 class="post-title">{{ page.title }}</h1>
    <p class="desc">{{ page.subtitle }}</p>
  </header>

  <!-- Upcoming Talk Section -->
  <section class="upcoming-talk">
    <h2 class="talk-title">Upcoming Talk</h2>
    <p class="talk-date">{{ page.talk_date }}</p>
    <hr style="border-top: 2px solid #bbb;">
  </section>


  <div class="post">
  <article>
    {% if page.speakers %}
      {% for speaker in page.speakers %}
        <hr>
        <div class="speaker float-{% if speaker.align == 'left' %}left{% else %}right{% endif %}">
          {% if speaker.image %}
            {% assign speaker_image_path = speaker.image | prepend: 'assets/img/' %}
            {% if speaker.image_circular %}
              {% assign speaker_image_class = 'img-fluid z-depth-1 rounded-circle' %}
            {% else %}
              {% assign speaker_image_class = 'img-fluid z-depth-1 rounded' %}
            {% endif %}
            {% capture sizes %}(min-width: {{site.max_width}}) {{ site.max_width | minus: 30 | times: 0.3}}px, (min-width: 576px) 30vw, 95vw"{% endcapture %}
            {% include figure.liquid loading="eager" path=speaker_image_path class=speaker_image_class sizes=sizes alt=profile.image %}
          {% endif %}
          {% if speaker.more_info %}
            <div class="more-info">{{ speaker.more_info }}</div>
          {% endif %}
        </div>

        <div class="clearfix">
          {% if speaker.content %}
            {% capture speaker_content %}{% include_relative {{ speaker.content }} %}{% endcapture %}
            {{ speaker_content | markdownify }}
          {% else %}
            {{ content }}
          {% endif %}
        </div>
      {% endfor %}
    {% endif %}
  </article>
</div>


  <article>
 
    <!-- Additional Sections (News, Latest Posts, Selected Papers, Social) -->
    <!-- Content continues unchanged -->
  </article>
</div>
