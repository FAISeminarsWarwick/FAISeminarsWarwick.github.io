 <div class="post">
  <div class="events">
    {% for event in site.events %}
    <div class="event-card">
      <div class="event-card-header">
        <img src="{{ event.calendar_icon | relative_url }}" alt="Calendar Icon" class="icon"> 
        <span class="event-date-time">{{ event.date | date: "%A, %B %d, %Y %H:%M" }}</span>
      </div>
      <div class="event-card-body">
        <img src="{{ event.location_icon | relative_url }}" alt="Location Icon" class="icon"> 
        <span class="event-location">{{ event.location }}</span>
        <img src="{{ event.speaker_icon | relative_url }}" alt="Speaker Icon" class="icon"> 
        <span class="event-speaker">{{ event.speaker}} - {{event.speaker_position }}</span>
      </div>
      <a href="{{ event.link }}" class="event-link">More Info</a>
    </div>
   </div>
    {% endfor %}
  </div>
</section>



